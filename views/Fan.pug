extends layout

block content
  h1= title
  - let fan = results;
  script.
    function buy(x){
      alert('Purchased Item: ' + x)
   } 
  div(class='container-fluid')
    div(class='row')
      each f, index in fan 
        div(class='col-sm-2' onclick='buy('+index+')') #{f.fan_type} #{f.model} #{f.cost}